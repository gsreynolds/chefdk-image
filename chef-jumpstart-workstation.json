{
  "variables": {
    "aws_profile": "{{env `AWS_PROFILE`}}",
    "aws_keypair": "{{env `TRAINING_AWS_KEYPAIR`}}"
  },
  "builders": [
    {
      "type": "amazon-ebs",
      "profile": "{{ user `aws_profile`}}",
      "communicator": "winrm",
      "region": "us-east-1",
      "user_data_file": "./scripts/winrm.ps1",
      "winrm_port": 5985,
      "source_ami": "ami-0204606704df03e7e",
      "instance_type": "m3.large",
      "winrm_username": "Administrator",
      "ami_name": "Chef Jumpstart - ChefConf 2019 - Workstation v0.1.1"
    }
  ],
  "provisioners": [
    {
      "type": "powershell",
      "scripts": [
        "./scripts/chef-jumpstart-workstation.ps1"
      ]
    }
  ]
}
